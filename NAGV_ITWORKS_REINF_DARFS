CREATE OR REPLACE VIEW CONSINCO.NAGV_ITWORKS_REINF_DARFS AS

SELECT /*DARFs Avulsas - Chamado 268632 - Amalia Petronilio | Criado por Giuliano em 03/08/2023*/
       DISTINCT X.NRONOTA, X.NROEMPRESA LOJA,TO_CHAR(X.DTAEMISSAO, 'DD/MM/YYYY') DTAEMISSAO,
       TO_CHAR(X.DTAENTRADA, 'DD/MM/YYYY') DTALANCTO, 
       A.NOMERAZAO RAZAO_SOCIAL, LPAD(A.NROCGCCPF,12,0)||LPAD(A.DIGCGCCPF,2,0) CNPJ, NULL COD_NAD_REND, X.VALOR VALOR_TOTAL, X.OBSERVACAO
       
   FROM CONSINCO.OR_NFDESPESA X INNER JOIN CONSINCO.GE_PESSOA A ON A.SEQPESSOA = X.SEQPESSOA
   
 WHERE 1=1
   AND X.CODHISTORICO  IN (343)
   AND X.SITUACAO = 'I'
   
   ORDER BY 1,4
       
