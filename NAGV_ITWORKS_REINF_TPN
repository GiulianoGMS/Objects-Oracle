 
CREATE OR REPLACE VIEW CONSINCO.NAGV_ITWORKS_REINF_TPN AS

-- TPN - Tickets por Natureza - Chamado 268629 - AMalia Petronilio

SELECT X.NROEMPRESA LOJA,TO_CHAR(X.DTAEMISSAO, 'MM') MES_EMISSAO, TO_CHAR(X.DTAEMISSAO, 'YYYY') ANO_EMISSAO,  
       TO_CHAR(X.DTAENTRADA, 'MM') MES_LANCTO, TO_CHAR(X.DTAENTRADA, 'YYYY') ANO_LANCTO,
       A.NOMERAZAO RAZAO_SOCIAL, LPAD(A.NROCGCCPF,12,0)||LPAD(A.DIGCGCCPF,2,0) CNPJ, NULL COD_NAD_REND,
       SUM(X.VALOR) VALOR_TOTAL
       
   FROM CONSINCO.OR_NFDESPESA X INNER JOIN CONSINCO.GE_PESSOA A ON A.SEQPESSOA = X.SEQPESSOA
   
 WHERE 1=1
   AND X.CODHISTORICO  IN (1191,1190)
   
   GROUP BY X.NROEMPRESA, TO_CHAR(X.DTAEMISSAO, 'MM'), TO_CHAR(X.DTAEMISSAO, 'YYYY'),  
       TO_CHAR(X.DTAENTRADA, 'MM'), TO_CHAR(X.DTAENTRADA, 'YYYY'),
       A.NOMERAZAO, LPAD(A.NROCGCCPF,12,0)||LPAD(A.DIGCGCCPF,2,0)
       
       ORDER BY 1,4 
